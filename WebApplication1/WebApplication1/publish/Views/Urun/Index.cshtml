@model IEnumerable<WebApplication1.Models.Urun>
@{
    ViewData["Title"] = "Ürünler";
}

<div class="container-fluid">
    <!-- Sayfa Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">
                        <i class="fas fa-box text-primary me-2"></i>
                        Ürünler
                    </h1>
                    <p class="text-muted mb-0">Tüm ürünlerinizi buradan yönetebilirsiniz</p>
                </div>
                <div>
                    <a href="@Url.Action("Ekle", "Urun")" class="btn btn-primary btn-lg shadow-sm">
                        <i class="fas fa-plus me-2"></i>Yeni Ürün Ekle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Arama ve Filtreler -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control" placeholder="Ürün ara...">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-end">
                        <span class="badge bg-primary fs-6">Toplam: @Model.Count() ürün</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ürünler Tablosu -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Ürün Listesi</h6>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th data-sort="id" class="sortable">
                                            <i class="fas fa-hashtag me-1"></i>ID
                                        </th>
                                        <th data-sort="urun-adi" class="sortable">
                                            <i class="fas fa-tag me-1"></i>Ürün Adı
                                        </th>
                                        <th data-sort="fiyat" class="sortable">
                                            <i class="fas fa-lira-sign me-1"></i>Fiyatı
                                        </th>
                                        <th data-sort="beden" class="sortable">
                                            <i class="fas fa-ruler me-1"></i>Bedeni
                                        </th>
                                        <th data-sort="odeme-bilgisi" class="sortable">
                                            <i class="fas fa-credit-card me-1"></i>Ödeme Bilgisi
                                        </th>
                                        <th data-sort="tarih" class="sortable">
                                            <i class="fas fa-calendar me-1"></i>Ödeme Tarihi
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-cogs me-1"></i>İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var urun in Model)
                                    {
                                        <tr>
                                            <td data-sort="id">@urun.Id</td>
                                            <td data-sort="urun-adi">
                                                <strong>@urun.UrunAdi</strong>
                                            </td>
                                            <td data-sort="fiyat">
                                                <span class="badge bg-success fs-6">@urun.Fiyati.ToString("C")</span>
                                            </td>
                                            <td data-sort="beden">
                                                <span class="badge bg-info">@urun.Bedeni</span>
                                            </td>
                                            <td data-sort="odeme-bilgisi">@urun.OdemeBilgisi</td>
                                            <td data-sort="tarih">@urun.OdemeTarihi.ToString("dd.MM.yyyy")</td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Detay", "Urun", new { id = urun.Id })" 
                                                       class="btn btn-sm btn-info" title="Detay">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <form method="post" action="@Url.Action("Sil", "Urun", new { id = urun.Id })" 
                                                          style="display: inline;">
                                                        <button type="button" class="btn btn-sm btn-danger" 
                                                                data-action="delete" 
                                                                data-urun-adi="@urun.UrunAdi"
                                                                title="Sil">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-box fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">Henüz ürün eklenmemiş</h4>
                            <p class="text-muted">İlk ürününüzü eklemek için yukarıdaki butonu kullanın.</p>
                            <a href="@Url.Action("Ekle", "Urun")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>İlk Ürünü Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/site.js"></script>
}
