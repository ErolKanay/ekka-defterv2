@model WebApplication1.Models.Urun
@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Ürün Düzenle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Duzenle" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="EklenmeTarihi" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Isim" class="form-label">Ürün Adı</label>
                                    <input asp-for="Isim" class="form-control" placeholder="Örn: Sweatshirt" />
                                    <span asp-validation-for="Isim" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Beden" class="form-label">Beden</label>
                                    <select asp-for="Beden" class="form-select">
                                        <option value="">Beden Seçin</option>
                                        <option value="XS">XS</option>
                                        <option value="S">S</option>
                                        <option value="M">M</option>
                                        <option value="L">L</option>
                                        <option value="XL">XL</option>
                                        <option value="XXL">XXL</option>
                                        <option value="3XL">3XL</option>
                                    </select>
                                    <span asp-validation-for="Beden" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Renk" class="form-label">Renk</label>
                                    <input asp-for="Renk" class="form-control" placeholder="Örn: Siyah" />
                                    <span asp-validation-for="Renk" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Fiyat" class="form-label">Fiyat (₺)</label>
                                    <input asp-for="Fiyat" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="StokMiktari" class="form-label">Stok Miktarı</label>
                                    <input asp-for="StokMiktari" class="form-control" type="number" min="0" placeholder="0" />
                                    <span asp-validation-for="StokMiktari" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Aciklama" class="form-label">Açıklama (Opsiyonel)</label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Ürün hakkında ek bilgiler..."></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Detay", "Urun", new { id = Model.Id })" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
