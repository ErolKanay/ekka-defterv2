@model WebApplication1.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Dashboard Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">
                        <i class="fas fa-tachometer-alt text-primary me-2"></i>
                        Dashboard
                    </h1>
                    <p class="text-muted mb-0">Ekka Defter - Butik Yönetim Sistemi</p>
                </div>
                <div>
                    <a href="@Url.Action("Ekle", "Urun")" class="btn btn-primary btn-lg shadow-sm">
                        <i class="fas fa-plus me-2"></i>Yeni Ürün Ekle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam Ürün
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ToplamUrun</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Toplam Gelir
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ToplamGelir.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Bu Ay Ürün
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.BuAyUrun</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Bu Ay Gelir
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.BuAyGelir.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Hızlı İşlemler</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a href="@Url.Action("Index", "Urun")" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-list me-2"></i>Tüm Ürünleri Görüntüle
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a href="@Url.Action("Ekle", "Urun")" class="btn btn-outline-success btn-block">
                                <i class="fas fa-plus me-2"></i>Yeni Ürün Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Sistem Bilgileri</h6>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <i class="fas fa-store fa-3x text-primary mb-3"></i>
                        <h5>Ekka Defter</h5>
                        <p class="text-muted">Butik Yönetim Sistemi</p>
                        <small class="text-muted">Versiyon 1.0</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
