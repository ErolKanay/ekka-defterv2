@model WebApplication1.Models.Urun
@{
    ViewData["Title"] = "Ürün Detayı";
}

<div class="container-fluid">
    <!-- Sayfa Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">
                        <i class="fas fa-eye text-info me-2"></i>
                        Ürün Detayı
                    </h1>
                    <p class="text-muted mb-0">Ürün bilgilerini görüntüleyin</p>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Urun")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Ürün Detayları -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>Ürün Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card border-left-primary h-100">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Ürün ID
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Id</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-hashtag fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="card border-left-success h-100">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Fiyat
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Fiyati.ToString("C")</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-lira-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td class="font-weight-bold text-primary">
                                                <i class="fas fa-tag me-2"></i>Ürün Adı:
                                            </td>
                                            <td class="text-gray-800">@Model.UrunAdi</td>
                                        </tr>
                                        <tr>
                                            <td class="font-weight-bold text-primary">
                                                <i class="fas fa-ruler me-2"></i>Bedeni:
                                            </td>
                                            <td>
                                                <span class="badge bg-info fs-6">@Model.Bedeni</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="font-weight-bold text-primary">
                                                <i class="fas fa-credit-card me-2"></i>Ödeme Bilgisi:
                                            </td>
                                            <td class="text-gray-800">@Model.OdemeBilgisi</td>
                                        </tr>
                                        <tr>
                                            <td class="font-weight-bold text-primary">
                                                <i class="fas fa-calendar me-2"></i>Ödeme Tarihi:
                                            </td>
                                            <td class="text-gray-800">@Model.OdemeTarihi.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>