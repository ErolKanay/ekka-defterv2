@model IEnumerable<WebApplication1.Models.Urun>
@{
    ViewData["Title"] = "Ürünler";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Ürünler</h2>
                <a href="@Url.Action("Ekle", "Urun")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Yeni Ürün Ekle
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Ürün Adı</th>
                                <th>Beden</th>
                                <th>Renk</th>
                                <th>Fiyat</th>
                                <th>Stok</th>
                                <th>Eklenme Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var urun in Model)
                            {
                                <tr>
                                    <td>@urun.Id</td>
                                    <td>@urun.Isim</td>
                                    <td>@urun.Beden</td>
                                    <td>@urun.Renk</td>
                                    <td>@urun.Fiyat.ToString("C")</td>
                                    <td>
                                        <span class="badge @(urun.StokMiktari > 0 ? "bg-success" : "bg-danger")">
                                            @urun.StokMiktari
                                        </span>
                                    </td>
                                    <td>@urun.EklenmeTarihi.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Detay", "Urun", new { id = urun.Id })" 
                                               class="btn btn-sm btn-info">Detay</a>
                                            <a href="@Url.Action("Duzenle", "Urun", new { id = urun.Id })" 
                                               class="btn btn-sm btn-warning">Düzenle</a>
                                            <form method="post" action="@Url.Action("Sil", "Urun", new { id = urun.Id })" 
                                                  style="display: inline;" 
                                                  onsubmit="return confirm('Bu ürünü silmek istediğinizden emin misiniz?')">
                                                <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <h4>Henüz ürün eklenmemiş</h4>
                    <p>İlk ürününüzü eklemek için yukarıdaki butonu kullanın.</p>
                </div>
            }
        </div>
    </div>
</div>
